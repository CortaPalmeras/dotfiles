
set $mod Mod4
set $terminal kitty

set $acb #44475A
set $act #F8F8F2
set $inb #282A36
set $int #BFBFBF
set $urb #FF5555

workspace_layout tabbed
default_border pixel 1
font pango:Noto Sans 0
# for_window [class=".*"] title_format "<span alpha='0'>%title</span>"

focus_follows_mouse no
floating_modifier $mod

exec --no-startup-id picom
exec --no-startup-id xwallpaper --zoom Media/sunbg.jpg
exec --no-startup-id redshift-gtk
exec --no-startup-id nm-applet
exec --no-startup-id light-locker
exec --no-startup-id start-pulseaudio-x11
exec --no-startup-id pa-applet --disable-key-grabbing --disable-notifications

# exec --no-startup-id alttab -w 1 -mk Super_L
# exec --no-startup-id dex --autostart --environment i3

bindsym $mod+t exec $terminal
bindsym $mod+Return exec $terminal
bindsym $mod+b exec firefox-esr
bindsym $mod+e exec nemo
bindsym $mod+d exec rofi -show drun
# bindsym $mod+d exec --no-startup-id j4-dmenu-desktop --dmenu="dmenu -i -sb '$acb' -sf '$act' -nb '$inb' -nf '$int'" --term=$terminal

bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-mute   @DEFAULT_SINK@ toggle
# bindsym XF86AudioMicMute     exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

bindsym $mod+F8 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym $mod+F7 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym $mod+F6 exec --no-startup-id pactl set-sink-mute   @DEFAULT_SINK@ toggle
# bindsym $mod+XF86AudioMicMute     exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

bindsym XF86MonBrightnessUp   exec --no-startup-id xbacklight -time 0 -steps 1 +1
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -time 0 -steps 1 -1

bindsym $mod+Shift+q kill
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit i3?' -B 'y' 'i3-msg exit'"
bindsym $mod+Shift+s exec "i3-nagbar -t warning -m 'Power off system?' -B 'y' '/usr/sbin/poweroff'"

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Tab focus right 
bindsym $mod+shift+Tab focus left

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+ntilde split h
bindsym $mod+v split v

bindsym $mod+f fullscreen toggle

bindsym $mod+o layout toggle split
bindsym $mod+w layout tabbed
bindsym $mod+s layout stacking

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+p focus parent
bindsym $mod+c focus child

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

bindsym $mod+r mode "resize"
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

# class                 brdr  bg  text ind ch_brdr
client.focused          $acb $acb $acb $acb $acb
client.focused_inactive $acb $acb $acb $acb $acb
client.unfocused        $inb $inb $inb $inb $inb
client.urgent           $acb $urb $acb $urb $urb
client.placeholder      $inb $inb $acb $inb $inb

client.background       $inb

bar {
    status_command i3status
    mode hide
    hidden_state hide
    font pango:DroidSansM Nerd Font 11
    separator_symbol " ‚ùØ "
    colors {
        background $inb
        statusline $act
        separator #585B70

        # class            brdr  bg  text
        focused_workspace  $acb $acb $act
        active_workspace   $inb $acb $act
        inactive_workspace $inb $inb $int
        urgent_workspace   $urb $urb $act
        binding_mode       $urb $urb $act
    }
}

